//我直接在table上绑定一个onclick,相当于在内存DOM上只绑定一次，但是我怎么去确定我点击的那个td对象去变色呢？

//这个时候就要想到事件对象中的target 或者srcElement
var num=0;
var tab=document.getElementsByTagName('table')[0];
tab.onclick=function(eve){ 
	          var ev = eve ||window.event;
	          if(ev.target.style.background!='white' &&ev.target.style.background!='black')
	            ev.target.style.background=num++%2?"black":"white";
                ev.target.style.borderWidth=1+'px';
				ev.target.style.borderType=solid;
				ev.target.style.borderRadius='25%';
